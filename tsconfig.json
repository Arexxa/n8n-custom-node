{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "lib": ["es2019", "es2020", "es2022.error"],
    "removeComments": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist/",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "jsonwebtoken",
      "express",
      "lodash",
      "request",
      "tough-cookie",
      "uuid"
    ]
  },
  "include": [
    "credentials/**/*",
    "nodes/**/*",
    "nodes/**/*.json",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
